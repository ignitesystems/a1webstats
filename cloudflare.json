{
    "main":"public/javascripts/countersback.js",
    "name":"Counters Back",
    "description": "Discover who is visiting your site! - The website visitors information you get includes names of companies, phone number, website address, and automatic daily, weekly or monthly emailed reports.",
    "version": "1.0.0",
    "category": "analytics",
    "account": {
        "callback_url": "http://countersback.herokuapp.com/api",
        "user_fields": ["email"]
    },
    "billing": {
        "type": "zone",
        "plans":[
            {
                "name" : "FREE 30 Days Trial",
                "price": "0.00"
            },
            {
                "name" : "Gold Service",
                "price" : "50.00"
            }
        ]
    },
    "config":{
        "details":{
            "Category": "A1 Web Stats",
            "Language": "English",
            "Price": "Free to install.",
            "Restrictions": "None",
            "CloudFlare": "<a href='http://www.cloudflare.com/terms' target='_blank'>Terms of use</a>"
        },
        "assets":{
            "logos" : {
                "200px": "./public/images/logo-200.png",
                "132px": "./public/images/logo-132.png"
            },
            "detail_page" : [
                "./public/images/example.png"
            ],
            "images" : [
                "./public/images/counter.png"
            ]
        },
        "interface": [
            {
                "type": "string",
                "name": "First Name",
                "description": "Please tell us your first name.",
                "id": "fname",
                "domain_request": true
            },
	    {
                "type": "string",
                "name": "Last Name",
                "description": "Please tell us your last name.",
                "id": "lname",
                "domain_request": true
            },
	    {
                "type": "string",
                "name": "Company Name",
                "description": "Please tell us your company name.",
                "id": "cname",
                "domain_request": true
            },
            {
                "type": "string",
                "name": "Web Address",
                "description": "Please tell us your web site address (URL).",
                "id": "url",
                "domain_request": true
            },
	    {
                "type": "string",
                "name": "Email Address",
                "description": "Please tell us your email address.",
                "id": "email",
                "domain_request": true
            },
            {
                "type": "string",
                "name": "Username",
                "description": "Please tell us your username.",
                "id": "username",
                "domain_request": true
            },
            {
                "type": "string",
                "name": "Password",
                "description": "Please tell us your password.",
                "id": "pword",
                "domain_request": true
            }
        ]
    }
}
